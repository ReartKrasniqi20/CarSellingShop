<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar (same as Profile) -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topToolbar2"
            style="@style/MyToolbarStyle"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/grey"
            app:title="CAR IMPORT IDA"
            app:titleCentered="true"
            app:contentInsetStartWithNavigation="0dp"
            app:contentInsetStart="0dp"
            app:navigationIcon="@drawable/ic_menu_24" />

        <!-- About Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F5F5"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- App Logo -->
                <ImageView
                    android:id="@+id/about_logo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:background="@drawable/logo_circle_bg"
                    android:padding="8dp" />

                <!-- Card with rounded corners -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <!-- Title -->
                        <TextView
                            android:id="@+id/about_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:textColor="#212121"
                            android:layout_marginBottom="12dp" />

                        <!-- Description -->
                        <TextView
                            android:id="@+id/about_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Car Import IDA është aplikacioni që ju mundëson të gjeni dhe porosisni makina të importuara shpejt dhe sigurt. Ne promovojmë vetëm brendet më të besueshme si Audi, BMW dhe Mercedes, duke ofruar transparencë, foto reale dhe detaje të sakta për çdo makinë. Qëllimi ynë është t’ju ndihmojmë ta gjeni makinën e ëndrrave me lehtësi dhe besim"
                            android:textSize="16sp"
                            android:lineSpacingExtra="4dp"
                            android:textColor="#616161"
                            android:layout_marginBottom="16dp" />

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="16dp"/>

                        <!-- Contact Info: Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_email"
                                android:tint="#1976D2"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="support@ida-cars.com"
                                android:textSize="16sp"
                                android:textColor="#1976D2"/>
                        </LinearLayout>

                        <!-- Contact Info: Website -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_web"
                                android:tint="#1976D2"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="www.ida-cars.com"
                                android:textSize="16sp"
                                android:textColor="#1976D2"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- LEFT DRAWER (same as Profile) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/grey"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>