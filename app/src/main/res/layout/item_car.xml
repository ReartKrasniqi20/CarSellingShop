<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Price Badge -->
        <TextView
            android:id="@+id/tvPriceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_badge"
            android:padding="4dp"
            android:text="22,000$"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Discount -->
        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISCOUNT - 15%"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <!-- Car Image -->
        <ImageView
            android:id="@+id/carImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="4dp" />

        <!-- Car Name -->
        <TextView
            android:id="@+id/carModelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audi S6"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="6dp" />

        <!-- Car Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Such an impressive car..."
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="6dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="CHECK DETAILS"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_red_pill"/>

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="ORDER"
                android:textAllCaps="true"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_green_pill"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
