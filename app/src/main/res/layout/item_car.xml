<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Price Badge -->
        <TextView
            android:id="@+id/tvPriceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price_badge"
            android:padding="4dp"
            android:text="22,000$"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <!-- Discount -->
        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="DISCOUNT - 15%"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />

        <!-- Car Image -->
        <ImageView
            android:id="@+id/carImageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <!-- Car Name -->
        <TextView
            android:id="@+id/carModelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Audi S6"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Car Description -->


        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDetails"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="CHECK DETAILS"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@drawable/btn_red_pill"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="ORDER"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@drawable/btn_green_pill"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnAdminDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="DELETE"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@drawable/btn_delete_pill"
                app:backgroundTint="@null" />
          
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnAdminEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:minWidth="0dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="EDIT"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:background="@drawable/btn_edit_pill"
                app:backgroundTint="@null"
                />


            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
