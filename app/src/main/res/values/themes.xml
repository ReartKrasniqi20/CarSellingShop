<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.CarSellingShop" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:cursorVisible">true</item>
        <item name="queryBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.CarSellingShop" parent="Base.Theme.CarSellingShop" />
</resources>